{
  "name": "tourly-backend",
  "version": "1.0.0",
  "description": "Backend API with TypeScript, Express, GraphQL, Socket.IO, MongoDB, Redis",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run build",
    "docker:build": "docker build -t backend-api .",
    "docker:run": "docker run -p 3000:3000 backend-api",
    "docker:push": "docker tag backend-api your-ecr-repo/backend-api:latest && docker push your-ecr-repo/backend-api:latest",
    "setup:ses": "node scripts/setup-ses.js",
    "verify:email": "node scripts/setup-ses.js verify"
  },
  "keywords": [
    "typescript",
    "express",
    "graphql",
    "apollo",
    "socket.io",
    "mongodb",
    "redis",
    "aws",
    "s3",
    "eks",
    "kubernetes"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@as-integrations/express4": "^1.1.2",
    "@aws-sdk/client-s3": "^3.43.0",
    "@aws-sdk/client-ses": "^3.856.0",
    "@aws-sdk/s3-request-presigner": "^3.43.0",
    "@faker-js/faker": "^9.9.0",
    "@types/ioredis": "^4.28.10",
    "apollo-server-express": "^3.12.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "uuid": "^11.1.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-unused-imports": "^3.2.0",
    "jest": "^29.6.2",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
